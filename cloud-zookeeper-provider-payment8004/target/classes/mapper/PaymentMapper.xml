<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdxy.pay.dao.PaymentDao">
    <resultMap id="BeansPaymentResultMap" type="com.hdxy.pay.pojo.Payment">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="serial" property="serial" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getPaymentById" parameterType="long" resultMap="BeansPaymentResultMap">
            select * from payment where id=#{id};
    </select>
    <insert id="add" parameterType="com.hdxy.pay.pojo.Payment">
        insert into payment (serial) values (#{serial});
    </insert>
</mapper>
